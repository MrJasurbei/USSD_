<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="155dp"
    android:background="@drawable/fragment_bg">

    <TextView
        android:id="@+id/vp_tariff_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:textSize="24sp"
        android:textColor="#FFD12D"
        android:textStyle="bold"
        android:text="ODDIY 10" />
    <LinearLayout
        android:id="@+id/traffic_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/vp_tariff_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/min_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:src="@drawable/yellow_min"/>
        <ImageView
            android:id="@+id/mb_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:src="@drawable/mb_yellow"/>
        <ImageView
            android:id="@+id/sms_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sms_yellow"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tr_mbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/traffic_types"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/vp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10MIN"
            android:textSize="14sp"
            android:layout_marginEnd="38dp"
            android:textColor="#FFD12D"/>
        <TextView
            android:id="@+id/vp_mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10MB"
            android:layout_marginEnd="40dp"
            android:textSize="14sp"
            android:textColor="#FFD12D"/>
        <TextView
            android:id="@+id/vp_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10SMS"
            android:textSize="14sp"
            android:textColor="#FFD12D"/>

    </LinearLayout>
    <TextView
        android:id="@+id/vp_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tr_mbs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#68D2FF"
        android:text="oyiga 10 000 so'm"/>

</RelativeLayout>